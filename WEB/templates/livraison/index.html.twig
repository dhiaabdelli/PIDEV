                <td>{{ livraison.datelivraison }}</td>
                <td>{{ livraison.nomlivreur }}</td>
                <td>{{ livraison.etat }}</td>
                <td>{{ livraison.nomclient }}</td>
                <td>
                    <a href="{{ path('livraison_show', {'idlivraison': livraison.idlivraison}) }}">show</a>
