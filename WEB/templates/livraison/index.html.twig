{% extends 'base.html.twig' %}

{% block title %}Livraison index{% endblock %}

{% block body %}
    <h1>Livraison index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idlivraison</th>
                <th>Reference</th>
                <th>Datelivraison</th>
                <th>Nomlivreur</th>
                <th>Etat</th>
                <th>Nomclient</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livraison in livraisons %}
