{% extends 'back.html.twig' %}

{% block title %}Evaluation{% endblock %}

{% block header %}Evaluation{% endblock %}

{% block breadcrumb %}Evaluation{% endblock %}

{% block body %}
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Liste des Evaluations</h3>
        <div class="box-tools">
            <div class="input-group input-group-sm hidden-xs" style="width: 150px;">
                <div class="input-group-btn">
                    <a href="{{ path('evaluation_new') }}" class="btn bg-purple btn-flat"><i class="fa fa-plus"></i> Ajouter une categorie</a>
                </div>
            </div>
        </div>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Compte</th>
                    <th>Produit</th>
                    <th>Note</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for evaluation in evaluations %}
                <tr>
                    <td>{{ evaluation.id }}</td>
                    <td>{{ evaluation.idUser.email }}</td>
                    <td>{{ evaluation.idProduit.libelle }}</td>
                    <td>{{ evaluation.note }}</td>
                    <td>
                        <a href="{{ path('evaluation_show', {'id': evaluation.id}) }}"><i class="fa fa-eye"></i></a>
                        <a href="{{ path('evaluation_edit', {'id': evaluation.id}) }}"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>
{% endblock %}
