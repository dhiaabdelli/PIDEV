                <td>{{ programmealimentaire.carbsrequis }}</td>
                <td>{{ programmealimentaire.proteinsrequis }}</td>
                <td>
                    <a href="{{ path('programmealimentaire_show', {'idprofile': programmealimentaire.idprofile}) }}">show</a>
