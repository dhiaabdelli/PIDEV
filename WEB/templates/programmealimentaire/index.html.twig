{% extends 'base.html.twig' %}

{% block title %}Programmealimentaire index{% endblock %}

{% block body %}
    <h1>Programmealimentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idprofile</th>
                <th>Bmr</th>
                <th>Calrequis</th>
                <th>Fatsrequis</th>
                <th>Carbsrequis</th>
                <th>Proteinsrequis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
