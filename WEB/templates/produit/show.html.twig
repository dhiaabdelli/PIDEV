{% extends 'back.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Produit</h3>
        </div>

        <div class="box-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ produit.id }}</td>
                    </tr>
                    <tr>
                        <th>Libelle</th>
                        <td>{{ produit.libelle }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ produit.prix }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ produit.description }}</td>
                    </tr>
                    <tr>
                        <th>Qt</th>
                        <td>{{ produit.qt }}</td>
                    </tr>
                    <tr>
                        <th>Img</th>
                        <td>{{ produit.img }}</td>
                    </tr>
                </tbody>
            </table>

            <a class="btn bg-purple btn-flat" href="{{ path('produit_index') }}"><i class="fa fa-fw fa-arrow-left"></i> back to list</a>

            <a class="btn bg-purple btn-flat" href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="fa fa-edit"></i> edit</a>

            {{ include('produit/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
